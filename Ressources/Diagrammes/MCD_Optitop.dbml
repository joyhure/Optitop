Table Utilisateurs {
    id int [pk, note: "Identifiant unique de l'utilisateur"]
    nom varchar [note: "Nom de l'utilisateur"]
    prenom varchar [note: "Prénom de l'utilisateur"]
    email varchar [note: "Email de l'utilisateur"]
    identifiant_connexion varchar [unique, note: "Identifiant unique dans le fichier CSV"]
    mot_de_passe varchar [note: "Mot de passe chiffré"]
    date_creation date [note: "Date de création de l'utilisateur"]
    role varchar [note: "Rôle de l'utilisateur (collaborateur, manager, supermanager, admin)"]
    derniere_connexion date [note: "Date de la dernière connexion"]
}

Table Factures {
    id int [pk, note: "Identifiant unique de la ligne"]
    date date [note: "Date de la facture ou de l'avoir"]
    num_client int [note: "Numéro unique identifiant le client"]
    client varchar [note: "Nom et prénom du client"]
    numero_facture varchar [note: "Numéro unique associé à chaque facture ou avoir"]
    famille varchar [note: "Famille du produit facturé"]
    quantite int [note: "Quantité d'articles (négatif pour un avoir)"]
    total_ttc float [note: "Total TTC de l'article"]
    ref_vendeur varchar [note: "Identifiant du vendeur (1ère lettre du prénom-nom)"]
    total_facture float [note: "Montant total de la facture"]
    paire varchar [note: "Numéro de la paire de lunettes (optique), vide sinon"]
    type varchar [note: "Statut de la vente (facture ou avoir)"]
    date_import date [note: "Date de l'import de la ligne"]
}

Table Devis {
    id int [pk, note: "Identifiant unique de la ligne"]
    date date [note: "Date du devis"]
    num_client int [note: "Numéro unique identifiant le client"]
    client varchar [note: "Nom et prénom du client"]
    numero_devis varchar [note: "Numéro unique associé à chaque devis"]
    famille varchar [note: "Famille du produit"]
    quantite int [note: "Quantité d'articles"]
    total_ttc float [note: "Total TTC de l'article"]
    ref_vendeur varchar [note: "Identifiant du vendeur (1ère lettre du prénom-nom)"]
    total_devis float [note: "Montant total du devis"]
    paire varchar [note: "Numéro de la paire de lunettes (optique), vide sinon"]
    validation varchar [note: "Statut du devis (non validé, validé)"]
    date_import date [note: "Date de l'import de la ligne"]
}
